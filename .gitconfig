[color]
	ui = true
	branch = auto
	diff = auto
	status = auto
[apply]
	whitespace = fix
[alias]
        ci = commit
        st = status
        br = branch
        co = checkout
        changes=diff --name-status -r
        diffstat=diff --stat -r
        new = !sh -c 'git log $1@{1}..$1@{0} "$@"'
[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green
[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold
[color "status"]
        added = yellow
        changed = green
        untracked = cyan
